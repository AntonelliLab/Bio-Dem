issn = {0027-8424},
journal = {Proceedings of the National Academy of Sciences},
number = {7},
pages = {1601--1606},
title = {{Strengthening protected areas for biodiversity and ecosystem services in China}},
url = {http://www.pnas.org/lookup/doi/10.1073/pnas.1620503114},
