keywords = {Development,Environmental governance,Environmental policy,National wetland policy,Ramsar convention},
number = {1},
pages = {141--153},
publisher = {Springer US},
title = {{National-Level Wetland Policy Specificity and Goals Vary According to Political and Economic Indicators}},
volume = {59},
year = {2017}
}
