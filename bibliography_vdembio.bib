journal = {Journal of Informetrics},
keywords = {Academic search engines,Bibliographic databases,Bibliometrics,Citation analysis,Citation overlap,Coverage,Google Scholar,Scientometrics,Scopus,Unique citations,Web of Science},
number = {4},
pages = {1160--1177},
