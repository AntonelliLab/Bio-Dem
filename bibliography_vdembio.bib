keywords = {G{\"{o}}taland,Integrative management,Lithuania,National forest inventory,Policy tools,Segregative management},
pages = {181--189},
title = {{Linking forest management, policy and biodiversity indicators - A comparison of Lithuania and Southern Sweden}},
url = {http://dx.doi.org/10.1016/j.foreco.2012.11.034},
volume = {291},
